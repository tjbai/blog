---
interface Props {
   date: Date;
   verbose?: boolean;
}
const { date, verbose = false } = Astro.props;
const dateOptions: Intl.DateTimeFormatOptions = {
   year: 'numeric',
   month: 'short',
   day: '2-digit',
   ...(verbose && {
      hour: 'numeric',
      minute: 'numeric'
   })
};
---
<time datetime={date.toISOString()}>
   {
      date.toLocaleDateString('en-us', dateOptions)
   }
</time>
