---
interface Props {
   date: Date;
   verbose?: boolean;
}
const { date, verbose = false } = Astro.props;

const dateOptions: Intl.DateTimeFormatOptions = {
   year: 'numeric',
   month: 'short',
   day: 'numeric',
   ...(verbose && {
   	hour: 'numeric',
   	minute: 'numeric'
   })
};

---
<time datetime={date.toISOString()}>
   {
   	date.toLocaleDateString('en-us', dateOptions)
   }
</time>
	</body>
</html>
